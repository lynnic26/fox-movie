/* pages/detail/detail.wxss */
page {
    background-color: #eee;
}
.detail-header {
    position: relative;
    height: 310rpx;
    /*background-repeat: no-repeat;*/
    background-size: 100%;
    background: #333;
    overflow: hidden;
}
.blur-layer,
.real-content {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
   
}
.blur-layer {
    filter: blur(50rpx);
}
.real-content {
    display: flex;
    padding: 20rpx 30rpx;
}
.stage-photo {
    width: 220rpx;
    height: 270rpx;
    margin-right: 30rpx;
}
.detail-intro {
    color: #fff;
}
.en-title {
    font-size: 30rpx;
    padding-bottom: 5rpx;
}

.tags, 
.country-length,
.release-time {
    font-size: 25rpx;
    color: #eee;
}
.tags  {
    margin-top: 13rpx;
}
.rating {
    position: relative;
    /*padding: 30rpx 0;*/
}
.rating image {
    position: absolute;
    left: -1px;
    top: 8rpx;
    height: 16px;
    width: 112px;
}
.rating-digit {
    position: absolute;
    left: 120px;
    top: 0;
    color: #ffd057;
    font-size: 20px;
}
.rating-count {
    color: #eee;
    font-size: 10px;
    padding-top: 25px;
}
.film-summary {
    line-height: 1.8;
    font-size: 28rpx;
    background-color: #fff;
}
.summary-content {
   padding: 20rpx 30rpx  0rpx 30rpx;
   height: 140rpx;
   overflow: hidden;
}
.summary-operation {
    padding: 10rpx 0;
    display: flex;
    justify-content: center;
}
.summary-operation image {
    width: 16px;
    height: 16px;
}
.film-casts {
    margin-top: 30rpx;
    background: #fff;
}