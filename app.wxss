/**app.wxss**/
page {
   font-family: 'Microsoft Yahei';
}
.movie-item {
  width: 100%;
  /*height: 210rpx;*/
  padding: 30rpx 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: row;
}
.movie-item image {
  height: 230rpx;
  width: 165rpx;
}
.movie-item .movie-content {
  flex: 1;
  padding: 0rpx 15rpx;
}
.movie-title {
  font-size: 38rpx;
  color: #18a88c;
  font-weight: bold;
}
.movie-rate {
  font-size: 32rpx;
  padding: 10rpx 0;
  color: #1abc9c;
}
.movie-tags,
.movie-casts {
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  color: #999;
}
.movie-tags .tag {
  /*border: 1px solid #18a88c;*/
  border-radius: 3px;
  padding: 0 10rpx;
  color: #fff;
  background-color: #1abc9c;
}
.movie-tags .tag {
  margin-right: 10rpx;
}
.movie-casts .cast {
  padding-left: 20rpx;
  color: #999;
}